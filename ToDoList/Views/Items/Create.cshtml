@{
  Layout = "_Layout";
}

@model ToDoList.Models.Item

<p><strong>You must have at least one category before you can add an item.</strong></p>
<p>@Html.ActionLink("Create a category here.", "Create", "Categories")</p>

<h4>Add new item</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description)

  @Html.LabelFor(model => model.Category)
  @Html.DropDownList("CategoryId")
  <input type="submit" value="Add new item" class="btn btn-primary" />
}
<p>@Html.ActionLink("Show all items", "Index")</p>
