@{
  Layout = "_Layout";
}

@using ToDoList.Models;

<h1>Categories</h1>

@if (@Model.Count == 0)
{
  <h3>No categories added yet.</h3>
}

@foreach (Category category in Model)
{
<li>@Html.ActionLink($"{category.Name}", "Details", new { id = category.CategoryId })</li>
}

<p>@Html.ActionLink("Add new category", "Create", "Categories")</p>
